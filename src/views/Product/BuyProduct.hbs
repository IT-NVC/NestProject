

<hr class="mt-0">
<h2 class="text-center" style="color: #2d4271;">Đặt ngay</h2>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="product" style="display: flex;">
                <div class="product-image">
                    <div class="image m-0">
                        <img src="{{newProduct.LinkImg}}" class="img-fluid" alt="image" style="width: 320px; hieght: 320px;;">
                    </div>
                </div>
                <div class="product-content" style="padding-left: 64px;">
                    <p class="title" id="title">{{newProduct.NameProduct}}</p>
                    <div class="ticket-no-wrap mb-1">
                        <div class="ticket-no">
                            Tên sản phẩm: 
                            {{newProduct.NameProduct}}
                        </div>
                    </div>
                    <div class="">
                        <div class="">
                            <p>Sản phẩm còn: <b class="text-danger">{{newProduct.quantity}}</b></p>
                        </div>
                    </div>
                    <div class="">
                        <div class="">
                            <p>Giá sản phẩm: <b class="text-danger">{{newProduct.price}}đ</b></p>
                        </div>
                    </div>
                </div>
            </div>
            <input type="text" id="priceProduct" style="display: none;" value="{{newProduct.price}}">
        </div>
        <h3 class="mt-2 col-12">Thông tin khách hàng</h3>
        <div class="col-md-8 col-12 left">
            <div class="customer-contact mb-3">
                <form action="/nestproject/order/{{newProduct.id_Product}}" method="POST" class="">
                    <div class="form-row">
                        <div class="col-12">
                            <label for="validationDefault01">Họ tên
                                <span>*</span>:
                            </label>
                            <input type="text" class="form-control" id="validationDefault01" name="Name" required>
                        </div>

                        {{!-- <div class="col-12">
                            <label for="validationDefault02">Giới tính
                                <span>*</span>:
                            </label>
                            <select class="custom-select" id="validationDefault04" name = "gioitinh" required>
                                <option selected disabled>Giới tính</option>
                                <option>Nam</option>
                                <option>Nữ</option>
                            </select>
                        </div> --}}
                    </div>

                    <div class="form-row">
                        {{!-- <div class="col-12">
                            <label for="validationDefault03">Ngày sinh
                                <span>*</span>:
                            </label>
                            <input type="date" class="form-control" id="validationDefault03" name="ngaysinh" required>
                        </div> --}}

                        <div class="col-12">
                            <label for="validationDefault01">Số điện thoại
                                <span>*</span>:
                            </label>
                            <input type="tel" class="form-control" id="validationDefault01" name="Phone" required>
                        </div>
                    </div>
                    {{!-- <div class="form-row">
                        <div class="col-12">
                            <label for="validationDefault03">Căn cước công dân
                                <span>*</span>:
                            </label>
                            <input type="text" class="form-control" id="validationDefault03" name="cccd" required>
                        </div>

                        <div class="col-12">
                            <label for="validationDefault01">Email
                                <span>*</span>:
                            </label>
                            <input type="email" class="form-control" id="validationDefault01" name="email" required>
                        </div>
                    </div> --}}

                    <div class="form-row">
                        <div class="col-12">
                            <label for="validationDefault03">Địa chỉ giao hàng
                                <span>*</span>:
                            </label>
                            <input type="text" class="form-control" id="validationDefault03" name = "Address" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12">
                            <label for="validationDefault01">Số lượng mua
                                <span>*</span>:
                            </label>
                            <input type="number" class="form-control" onchange="myFunction()" id="quantity" name="amount" min="1" max="{{newProduct.quantity}}" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12">
                            <label for="totalMoney">Tổng tiền
                                <span>*</span>:
                            </label>
                            <input type="text" class="form-control" id="totalMoney" name="totalMoney" required readonly>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-danger btn-order" type="submit" style="width:100% ">
                            Mua ngay
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    function myFunction(){
        let quantity =document.getElementById('quantity').value;
        let price = document.getElementById('priceProduct').value;
        let totalMoney = document.getElementById('totalMoney');
        totalMoney.value = quantity*price;
    }
</script>